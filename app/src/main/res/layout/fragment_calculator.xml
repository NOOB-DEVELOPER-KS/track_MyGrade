<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/gradient_bf">

    <LinearLayout
        android:id="@+id/ll_no_of_subs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the number of subjects you have to calculate GPA."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Input Row for number of subjects and Generate Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- EditText for user to input number of subjects -->
            <EditText
                android:id="@+id/et_no_of_subjects"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:hint="Enter number of subjects"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/edittext_backgrouond"
                android:inputType="number"
                android:maxLength="3"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"/>

            <!-- Generate Button -->
            <Button
                android:id="@+id/btn_generate_subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/blue_600"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Instruction note at the bottom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Enter only the number of subjects you CLEARED."
            android:textColor="@color/red"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Container for dynamically generated subject input fields -->
    <ScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_subjects_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        </LinearLayout>
    </ScrollView>
</LinearLayout>
